{
  "name": "universal-javascript-boilerplate",
  "version": "1.2.0",
  "main": "dist/index.js",
  "author": "Evan M Jones <evanjones4040@gmail.com> (https://evansapps.com/)",
  "license": "MIT",
  "engines": {
    "node": "7.6.0",
    "npm": "4.1.2"
  },
  "scripts": {
    "ts": "concurrently --kill-others \" npm run ts-server-dev\" ",
    "dev": "concurrently --kill-others \" npm run ts-server-dev\" \"nodemon dist/server/entry.js\" \"npm run webpack-dev\" ",
    "ts-server": "tsc --outDir dist/ src/**/*.ts --allowJs --jsx 'react' --jsxFactory 'React.createElement' --module 'umd' --moduleResolution 'node' --types 'node' --lib 'ES7'",
    "ts-server-dev": "tsc --outDir dist/entry.js src/**/*.ts --allowJs --jsx 'react' --jsxFactory 'React.createElement' --module 'umd' --moduleResolution 'node' --types 'node' --lib 'ES7' --watch",
    "start": "npm run build && node dist/server/entry.js",
    "flow": "flow check",
    "prettier": "prettier --write './src/**/*.js' --single-quote",
    "build": "concurrently \"npm run webpack-build\" \"babel ./src/server -d ./dist/server --ignore ./src/server/index.js\" \"babel ./src/shared -d ./dist/shared\" ",
    "webpack-dev": "cross-env NODE_ENV=development webpack --progress --hide-modules --watch",
    "webpack-build": "cross-env NODE_ENV=production webpack --progress --hide-modules"
  },
  "dependencies": {
    "@types/node": "^7.0.5",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-3": "^6.22.0",
    "babel-register": "^6.23.0",
    "background-image-fade-in": "^0.4.4",
    "compression-webpack-plugin": "^0.3.2",
    "concurrently": "^3.3.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "empty": "^0.10.1",
    "express": "^4.14.1",
    "extract-text-webpack-plugin": "^2.0.0-beta",
    "flow": "^0.2.3",
    "flow-bin": "^0.39.0",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "portfinder": "^1.0.13",
    "prettier": "^0.17.1",
    "pug": "^2.0.0-beta11",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "redux": "^3.6.0",
    "router": "^1.1.5",
    "rxjs": "^5.1.0",
    "sass-loader": "^5.0.1",
    "style-loader": "^0.13.1",
    "ts-loader": "^2.0.0",
    "typescript": "^2.2.1",
    "webpack": "^2.2.1",
    "webpack-node-externals": "^1.5.4"
  }
}
